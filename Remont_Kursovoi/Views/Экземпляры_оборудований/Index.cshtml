@model IEnumerable<Remont_Kursovoi.Экземпляры_оборудований>

@{
    ViewBag.Title = "Index";
}

<h2>Каталог экземпляров</h2>


<form method="post">
    <h4>
        Фильтровать по типу типу оборудования:
    </h4>
    @using (Html.BeginForm("Index", "Экземпляры_оборудований"))
    {
        <p>
            <select class="form-control" name="IdTypes">
                <option value=null>Все</option>

                @foreach (var c in ViewBag.IdTypes)
                {
                    <option value=@c.ID_типа_оборудования>@c.Наименование_типа</option>
                }
            </select>
           
            <input type="submit" value="Поиск" class="btn btn-default" />
        </p>
    }
</form>



    <p>
       <a class="btn btn-default" @Html.ActionLink("Добавить экземпляр", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Наименование)
            </th>
            <th>
                Состояние
            </th>
            <th>
                Наименование типа оборудования
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Наименование)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Состояние_оборудования.Наименование)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Типы_оборудования.Наименование_типа)
                </td>
                <td>
                    <p>
                        <a class="btn btn-default" @Html.ActionLink("Редактировать", "Edit", new { id = item.Код_экземпляра }) |
                        <a class="btn btn-default"@Html.ActionLink("Удалить", "Delete", new { id = item.Код_экземпляра })</p>
</td>
            </tr>
        }




    </table>
    @Html.ActionLink("Назад", "Index", "Home")

