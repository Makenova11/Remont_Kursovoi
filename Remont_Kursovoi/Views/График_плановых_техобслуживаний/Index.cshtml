@model IEnumerable<Remont_Kursovoi.График_плановых_техобслуживаний>

@{
    ViewBag.Title = "Index";
}

<p><a class="btn btn-default" @Html.ActionLink("Добавить плановое техобслуживание", "Create")</p>
<table class="table">
    <tr>

        <th>
            @Html.ActionLink("Дата начала ремонта", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Экземпляр", "Index", new { sortOrder = ViewBag.Ekzemplyar })
        </th>
        <th>
            Код экземпляра
        </th>
        <th>
            @Html.ActionLink("Работник", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.Дата_начала_ремонта)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Экземпляры_оборудований.Наименование)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Типы_ремонта.Код_ремонта)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Работники.Фамилия)
                @Html.DisplayFor(modelItem => item.Работники.Имя)
                @Html.DisplayFor(modelItem => item.Работники.Отчество)
            </td>
            <td>
                <p>
                    <a class="btn btn-default" @Html.ActionLink("Редактировать", "Edit", new { id = item.ID_планового_ремонта }) |
                       <a class="btn btn-default"@Html.ActionLink("Удалить", "Delete", new { id = item.ID_планового_ремонта })</p>
</td>
        </tr>
    }

</table>
