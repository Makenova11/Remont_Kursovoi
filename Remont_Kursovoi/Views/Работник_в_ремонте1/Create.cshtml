@model Remont_Kursovoi.Работник_в_ремонте

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Работник в ремонте</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Код_роли, "Роль", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Код_роли", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Код_роли, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ID_работника, "Работник", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_работника", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Работники.Фамилия, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Журнал_выполненных_ремонтов, "ID ремонта", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_ремонта", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Журнал_выполненных_ремонтов.ID_ремонта, "", new { @class = "text-danger" })
            </div>
        </div>
       


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
   <a class="btn btn-default" @Html.ActionLink("Назад", "Index")
</div>
