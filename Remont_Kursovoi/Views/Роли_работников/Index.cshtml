@model IEnumerable<Remont_Kursovoi.Роли_работников>

@{
    ViewBag.Title = "Index";
}

<h2>Роли работников</h2>


<p>
    <a class="btn btn-default" @Html.ActionLink("Добавить роль", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Роль
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Наименование)
            </td>
            <td>
                <p>
                    <a class="btn btn-default" @Html.ActionLink("Редактировать", "Edit", new { id = item.Код_роли }) |
   <a class="btn btn-default" @Html.ActionLink("Удалить", "Delete", new { id = item.Код_роли })</p>
</td>
        </tr>
    }

</table>
